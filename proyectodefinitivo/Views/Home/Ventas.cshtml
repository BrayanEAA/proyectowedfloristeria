                    <th>cantidad</th>
                    <th>Total</th>
                    <th>total</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var iten in Model)
                {
                    <tr>
                        <td>@iten.IdVenta</td>
                        <td>@iten.IdProducto </td>
                        <td>@iten.IdCliente </td>
                        <td>@iten.Cantidad</td>
                        <td>@iten.Total</td>
                        <td></td>
                        <td>

                            <button>Modificar</button>
                            <button>Ver</button>
                        </td>
                    </tr>

                }

                <tr>
                    <td></td>
                </tr>

            </tbody>
        </table>
    </div>
    <hr size="2" color="red">

    <div class="container">
        <div class="box">
            <a><img src="img/Icono arreglo.png" alt="Imagen 1"></a>
            <p>Arreglos Florales</p>
        </div>
        <div class="box">
            <a><img src="img/Servicio, decoracion.png" alt="Imagen 2"></a>
            <p>Servicios de decoracion</p>
        </div>
        <div class="box">
            <a><img src="img/Precios icon.png" alt="Imagen 3"> </a>
            <p>Nuestros precios</p>
        </div>
    </div>

</body>
</html>

